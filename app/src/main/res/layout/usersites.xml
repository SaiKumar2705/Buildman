<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="45dp"


            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/bluelight">

            <TextView
                android:id="@+id/version_mainactivity"
                style="@style/CustomTextview"
                android:text="@string/version_test"
                android:textColor="@color/blackdark"
                android:textSize="8dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/site_names_usersites"
                style="@style/Listview_Headers_Textview"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/select_project" />

            <ImageView
                android:id="@+id/search_icon_img_usersites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:src="@drawable/search" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_layout_header_usersites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/search_edittext_site_names_usersites"
                style="@style/Edittext_Style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:hint="@string/search_sites"

                android:inputType="textVisiblePassword" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listview_usersites"
            style="@style/Listview"
            android:layout_marginBottom="1dp"

            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/knowledge_center_img_usersites1"
                    style="@style/Home_Down_Imgview"

                    android:layout_above="@+id/knowledge_center_txv_usersites1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/home_down_textview_from_margin_top" />

                <TextView
                    android:id="@+id/knowledge_center_txv_usersites1"
                    style="@style/Home_Down_Textview"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"


                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/knowledge_center_img_usersites"
                    style="@style/Home_Down_Imgview"
                    android:layout_above="@+id/knowledge_center_txv_usersites"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/home_down_textview_from_margin_top"
                    android:src="@drawable/knowledgecentre" />

                <TextView
                    android:id="@+id/knowledge_center_txv_usersites"
                    style="@style/Home_Down_Textview"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/knowledge_center"

                    />

                <RelativeLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/analytics_img_usersites"
                    style="@style/Home_Down_Imgview"
                    android:layout_above="@+id/analytics_txv_usersites"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/home_down_textview_from_margin_top"
                    android:src="@drawable/analytics" />

                <TextView
                    android:id="@+id/analytics_txv_usersites"
                    style="@style/Home_Down_Textview"

                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/analytics" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/analytics_img_usersites1"
                    style="@style/Home_Down_Imgview"

                    android:layout_above="@+id/analytics_txv_usersites1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/home_down_textview_from_margin_top" />

                <TextView
                    android:id="@+id/analytics_txv_usersites1"
                    style="@style/Home_Down_Textview"

                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    />

                <RelativeLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"></RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>


</LinearLayout>

