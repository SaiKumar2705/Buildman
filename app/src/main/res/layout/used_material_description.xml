<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/material_title_txv_used_material_description"
            style="@style/CustomAction_Bar_Textview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/matl_used" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@color/gray_bar_material">

        <Button
            android:id="@+id/view_stockhistory_btn_used_material_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/history" />

        <TextView
            android:id="@+id/matl_name_header_used_material_description"
            style="@style/ArrowedChanged_Textview"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:text="Membrane" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@color/white"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <CheckBox
                                android:id="@+id/adjustments_cb_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/adjust_out" />

                            <Spinner
                                android:id="@+id/spinner_adjustOut_used_material_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/adjustments_cb_used_material_description"

                                android:visibility="gone"></Spinner>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/taskname_title_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toLeftOf="@+id/taskname_img_used_material_description"
                                android:text="@string/task_name"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/taskname_img_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/select_task"

                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">


                            <!-- Dummy item to prevent EditText from receiving focus -->
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />


                            <!-- Editext for Search -->
                            <EditText
                                android:id="@+id/remarks_edt_used_material_description"
                                style="@style/Edittext_Style"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/edittext"
                                android:gravity="left"
                                android:hint="Remarks"
                                android:nextFocusLeft="@id/remarks_edt_used_material_description"
                                android:nextFocusUp="@id/remarks_edt_used_material_description"
                                android:padding="2dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/currentstock_title_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/curentstock"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/currentstock_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:gravity="right"

                                android:padding="10dp"
                                android:text="12.00"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/currentstock_dimens_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="Lts."
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <TextView
                                android:id="@+id/used_stock_title_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/used_stock"
                                android:textStyle="bold" />

                            <!-- Dummy item to prevent EditText from receiving focus -->
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />


                            <!-- Editext for Search -->
                            <EditText
                                android:id="@+id/used_stock_edt_used_material_description"
                                style="@style/Edittext_Style"
                                android:layout_alignBaseline="@+id/used_stock_title_txv_used_material_description"

                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="25dp"
                                android:layout_toLeftOf="@+id/used_stock_dimens_txv_used_material_description"
                                android:layout_toRightOf="@+id/used_stock_title_txv_used_material_description"
                                android:background="@drawable/edittext"
                                android:gravity="right"
                                android:inputType="numberDecimal"
                                android:nextFocusLeft="@id/used_stock_edt_used_material_description"
                                android:nextFocusUp="@id/used_stock_edt_used_material_description"
                                android:text="0.00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/used_stock_dimens_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="Lts." />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <Button
                                android:id="@+id/update_btn_used_material_description"
                                style="@style/UpdateButton"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:text="@string/update_stock"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/updatedstock_title_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/stock"

                                />

                            <View
                                android:id="@+id/view_updatedStock"
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:id="@+id/updatedstock_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignBaseline="@+id/updatedstock_title_txv_used_material_description"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"

                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="50dp"
                                android:gravity="right"
                                android:padding="10dp"

                                />

                            <TextView
                                android:id="@+id/updatedstock_dimens_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"

                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <TextView
                                android:id="@+id/transaction_datetime_title_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/transaction_date"

                                />

                            <TextView
                                android:id="@+id/transaction_datetime_txv_used_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignBaseline="@+id/transaction_datetime_title_txv_used_material_description"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_toLeftOf="@+id/transaction_datetime_calender_img_used_material_description"
                                android:gravity="right"

                                android:padding="10dp"
                                android:text="8-10-2015 22:55:00" />


                            <ImageView
                                android:id="@+id/transaction_datetime_calender_img_used_material_description"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"

                                android:layout_marginRight="10dp"
                                android:src="@drawable/calender_date_tme" />
                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img_used_material_description"

                    style="@style/BackImageview"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"

                    />

                <Button
                    android:id="@+id/confirm_btn_used_material_description"

                    style="@style/Confirm_Button"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="@string/confirm" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 

