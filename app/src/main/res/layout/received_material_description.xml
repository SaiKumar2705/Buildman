<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/material_title_received_material_description"
            style="@style/CustomAction_Bar_Textview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/matl_received" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@color/gray_bar_material">

        <TextView
            android:id="@+id/matl_name_header_received_material_description"
            style="@style/ArrowedChanged_Textview"
            android:layout_centerInParent="true"
            android:text="Membrane" />

        <Button
            android:id="@+id/view_stockhistory_btn_received_material_description"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/history" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@color/gray"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <CheckBox
                                android:id="@+id/adjustments_cb_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/adjust_in"

                                />

                            <Spinner
                                android:id="@+id/spinner_adjustIn_received_material_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/adjustments_cb_received_material_description"

                                android:visibility="gone"></Spinner>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/currentstock_title_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/curentstock"

                                />

                            <TextView
                                android:id="@+id/currentstock_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="12.00"

                                />

                            <TextView
                                android:id="@+id/currentstock_dimen_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="Lts." />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/dc_invoice_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">


                            <Switch
                                android:id="@+id/dc_invoice_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:textOff="DC"
                                android:textOn="INV" />
                            <!-- Dummy item to prevent EditText from receiving focus -->
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />


                            <!-- Editext for Search -->

                            <EditText
                                android:id="@+id/dc_inv_edt_received_material_description"
                                style="@style/Edittext_Style"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="2dp"

                                android:layout_marginRight="60dp"
                                android:layout_toRightOf="@+id/dc_invoice_switch"
                                android:background="@drawable/edittext"
                                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:gravity="right"

                                android:nextFocusLeft="@id/dc_inv_edt_received_material_description"
                                android:nextFocusUp="@id/dc_inv_edt_received_material_description"
                                android:text="0.00"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/revdStock_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/receivedstock_title_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/receivedstock"

                                />

                            <!-- Dummy item to prevent EditText from receiving focus -->
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />


                            <!-- Editext for Search -->
                            <EditText
                                android:id="@+id/receivedstock_edt_received_material_description"
                                style="@style/Edittext_Style"
                                android:layout_alignBaseline="@+id/receivedstock_title_txv_received_material_description"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="25dp"
                                android:layout_toLeftOf="@+id/receivedstock_dimen_txv_received_material_description"
                                android:layout_toRightOf="@+id/receivedstock_title_txv_received_material_description"
                                android:background="@drawable/edittext"
                                android:gravity="right"
                                android:inputType="numberDecimal"
                                android:nextFocusLeft="@id/receivedstock_edt_received_material_description"
                                android:nextFocusUp="@id/receivedstock_edt_received_material_description"
                                android:text="0.00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/receivedstock_dimen_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="Lts." />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/updateStock_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <Button
                                android:id="@+id/update_stock_btn_received_material_description"
                                style="@style/UpdateButton"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:text="@string/update_stock" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/stock_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray">

                            <TextView
                                android:id="@+id/updatedstock_title_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/stock"

                                />

                            <TextView
                                android:id="@+id/updatedstock_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignBaseline="@+id/updatedstock_title_txv_received_material_description"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="50dp"
                                android:gravity="right"
                                android:padding="10dp"

                                />

                            <TextView
                                android:id="@+id/updatedstock_dimen_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"

                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/transactionDate_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/transaction_datetime_title_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="@string/transaction_date"

                                />

                            <TextView
                                android:id="@+id/transaction_datetime_txv_received_material_description"
                                style="@style/Description_Row_Textview"
                                android:layout_alignBaseline="@+id/transaction_datetime_title_txv_received_material_description"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_toLeftOf="@+id/transaction_datetime_calender_img_received_material_description"
                                android:gravity="right"

                                android:padding="10dp"
                                android:text="8-10-2015 22:55:00" />


                            <ImageView
                                android:id="@+id/transaction_datetime_calender_img_received_material_description"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"

                                android:layout_marginRight="10dp"
                                android:src="@drawable/calender_date_tme" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img_received_material_description"
                    style="@style/BackImageview"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/confirm_btn_received_material_description"
                    style="@style/Confirm_Button"
                    android:layout_marginBottom="3dp"

                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"

                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 
