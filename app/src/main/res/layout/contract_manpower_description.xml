<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contractor_title_contract_mp_description"

            style="@style/CustomAction_Bar_Textview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/summary_contract_mp_description"
            android:text="Retaining wall of block C in kalyani tech" />

        <Button
            android:id="@+id/layout_hide_show_plus_contract_mp_description"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/plus" />

        <TextView

            android:id="@+id/summary_contract_mp_description"
            style="@style/Summary_Textview"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_hide_show_plus_contract_mp_description"
            android:text="@string/summary" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hide_show_contract_mp_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/total_billable_amt_title_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentLeft="true"
                android:text="@string/total_billable" />

            <TextView
                android:id="@+id/total_billable_amt_rs_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentRight="true"
                android:text="Rs 0.00" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/total_billed_amt_title_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentLeft="true"
                android:text="@string/total_billed" />

            <TextView
                android:id="@+id/total_billed_amt_rs_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentRight="true"
                android:text="Rs 0.00" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/totalpaid_tite_qty_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentLeft="true"
                android:text="@string/total_paid" />

            <TextView
                android:id="@+id/totalpaid_rs_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentRight="true"
                android:text="Rs 0.00" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/totalbalance_tite_qty_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentLeft="true"
                android:text="@string/total_balance" />

            <TextView
                android:id="@+id/totalbalance_rs_summary_contract_mp_description"
                style="@style/Description_Row_Textview"
                android:layout_alignParentRight="true"
                android:text="Rs 0.00" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/gray_bar_material">

        <TextView
            android:id="@+id/present_work_loc_name_contract_mp_description"
            style="@style/ArrowedChanged_Textview"
            android:layout_centerInParent="true"
            android:text="Labour-M" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/startdate_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/start_date" />

                        <TextView
                            android:id="@+id/startdate_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="20-11-2015" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/scopeofwork_title_contract_mp_description"
                            style="@style/Description_Row_Textview"

                            android:text="@string/scope_of_work" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/scopeofwork_title_contract_mp_description">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/scopeofwork_contract_mp_description"
                                    style="@style/Description_Row_Textview"
                                    android:layout_alignParentLeft="true"
                                    android:gravity="left"
                                    android:text="will finish in 2 days"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/rate_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/rate" />

                        <TextView
                            android:id="@+id/rate_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="Rs 200.00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/total_qty_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/total_qty" />

                        <TextView
                            android:id="@+id/total_qty_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="0.00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/completed_qty_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/completedqty" />

                        <TextView
                            android:id="@+id/completed_qty_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="0.00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/billable_amt_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:text="Rs 0.00" />
                        <!-- 	billable_amt replaced with contract_amt -->
                        <TextView
                            android:id="@+id/billable_amt_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/contract_amt" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/billed_amt_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:text="Rs 0.00" />

                        <TextView
                            android:id="@+id/billed_amt_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/billed_amt" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/paid_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/paid" />

                        <TextView
                            android:id="@+id/paid_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:text="Rs 0.00" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/billable_balance_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/billable_balance" />

                        <TextView
                            android:id="@+id/billable_balance_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:text="Rs 0.00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/billed_balance_title_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/billed_balance" />

                        <TextView
                            android:id="@+id/billed_balance_rs_contract_mp_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:text="Rs 0.00" />
                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="6"
            android:orientation="horizontal">


            <Button
                android:id="@+id/back_Btn_contract_mp_description"
                style="@style/Confirm_Button"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="@string/back" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
