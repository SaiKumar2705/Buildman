<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/material_indent_material_row"
        style="@style/Listview_row_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:text="Bule Seal A" />

    <TextView
        android:id="@+id/requiredstock_title_indent_material_row"
        style="@style/Listview_subtext_row_textview"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/material_indent_material_row"
        android:gravity="left"
        android:text="@string/reqd_stock" />

    <TextView
        android:id="@+id/requiredstock_indent_material_row"
        style="@style/Listview_subtext_row_textview"
        android:layout_below="@+id/material_indent_material_row"
        android:layout_toRightOf="@+id/requiredstock_title_indent_material_row"
        android:gravity="left"
        android:text="3.00" />


    <TextView
        android:id="@+id/currentstock_title_indent_material_row"
        style="@style/Listview_subtext_row_textview"
        android:layout_below="@+id/material_indent_material_row"
        android:layout_toLeftOf="@+id/currentstock_indent_material_row"

        android:gravity="right"

        android:text="@string/curentstock" />

    <TextView
        android:id="@+id/currentstock_indent_material_row"
        style="@style/Listview_subtext_row_textview"
        android:layout_below="@+id/material_indent_material_row"
        android:layout_toLeftOf="@+id/units_indent_material_row"

        android:gravity="right"

        android:text="3.00" />

    <TextView
        android:id="@+id/units_indent_material_row"
        style="@style/Listview_subtext_row_textview"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/material_indent_material_row"
        android:gravity="right"
        android:text="kgs" />
</RelativeLayout>
