<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titletxv_zoom_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Please zoom the chart for best visibility"
        android:textSize="15dp" />

    <Button
        android:id="@+id/closebtn_zoom_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titletxv_zoom_dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/yellowlight"
        android:text="Close"
        android:textSize="15dp" />


</RelativeLayout>