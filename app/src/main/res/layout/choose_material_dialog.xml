<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_choose_material_dialog"
            style="@style/CustomTextview"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="the bokk"
            />
       
    </LinearLayout>
    
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" 
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/cancel_btn_choose_material_dialog"
            style="@style/Buttons_Down"
           android:layout_marginLeft="20dp"
             android:layout_height="40dp"
            android:layout_toLeftOf="@+id/view_divider"
            android:text="@string/cancel" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/confirm_btn_choose_material_dialog"
            style="@style/Buttons_Down"
            android:layout_height="40dp"
          android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/view_divider"
            android:text="@string/confirm" />
    </RelativeLayout>
</LinearLayout>
