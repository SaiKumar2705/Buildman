<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/material_title_indent_material_description"
            style="@style/CustomAction_Bar_Textview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:text="@string/raise_indent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@color/gray_bar_material">
        <!--  <ImageView
             android:id="@+id/prev_matl_name_indent_material_description"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/previous_arrow"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="15dp"/> -->
        <TextView
            android:id="@+id/matl_name_header_indent_material_description"
            style="@style/ArrowedChanged_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:text="Membrane" />
        <!--  <ImageView 
         android:id="@+id/next_matl_name_indent_material_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/next_arrow"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"/> -->
        <Button
            android:id="@+id/view_stockhistory_btn_indent_material_description"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/history" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/rate_title_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/rate"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_mat"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/rate_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:gravity="right"
                            android:padding="10dp"
                            android:text="@string/rate_amount" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/currentstock_title_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/curentstock"

                            />

                        <View
                            android:id="@+id/view_curtStock"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/currentstock_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:gravity="right"

                            android:padding="10dp"
                            android:text="12.00"

                            />

                        <TextView
                            android:id="@+id/currentstock_dimens_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="Lts." />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/requiredstock_title_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/reqd_stock"

                            />

                        <View
                            android:id="@+id/view_recdStock"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true" />
                        <!-- Dummy item to prevent EditText from receiving focus -->
                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />


                        <!-- Editext for Search -->

                        <EditText
                            android:id="@+id/requiredstock_edt_indent_material_description"
                            style="@style/Edittext_Style"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/requiredstock_title_txv_indent_material_description"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@+id/view_recdStock"
                            android:background="@drawable/edittext"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:nextFocusLeft="@id/requiredstock_edt_indent_material_description"
                            android:nextFocusUp="@id/requiredstock_edt_indent_material_description"
                            android:text="0.00"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/requiredstock_dimens_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="Lts." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/required_bydate_title_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/req_by_date"

                            />

                        <View
                            android:id="@+id/view_required_bydate"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/required_bydate_txv_indent_material_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:gravity="right"

                            android:padding="10dp"
                            android:text="08-10-2015"

                            />

                        <ImageView
                            android:id="@+id/required_bydate_calender_img_indent_material_description"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/calender" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img_indent_material_description"

                    style="@style/BackImageview"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:background="@color/yellowlight" />

                <Button
                    android:id="@+id/confirm_btn_indent_material_description"

                    style="@style/Confirm_Button"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="@string/confirm" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>