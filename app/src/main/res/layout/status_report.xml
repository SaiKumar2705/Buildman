<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dummy item to prevent EditText from receiving focus -->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <!-- Editext for Search -->
    <EditText
        android:id="@+id/search_edt_statusreport"
        style="@style/Edittext_Style"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:hint="Search Site Name"
        android:inputType="textVisiblePassword"
        android:nextFocusLeft="@id/search_edt_statusreport"
        android:nextFocusUp="@id/search_edt_statusreport" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/back_img_statusreport"
        android:layout_below="@+id/search_edt_statusreport">

        <LinearLayout
            android:id="@+id/expandableList_linearlayout_statusreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"

            >

            <ExpandableListView
                android:id="@+id/expandablelist_statusreport"
                style="@style/Listview"
                android:layout_margin="5dp"
                android:cacheColorHint="#00000000"
                android:childDivider="@color/yellow"
                android:divider="@color/blackdark"

                android:dividerHeight="1dip"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="disabled" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/back_img_statusreport"
        style="@style/BackImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"

        />

</RelativeLayout>