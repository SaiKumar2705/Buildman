<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/history_viewstockhistory_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="@string/history"
                android:textSize="@dimen/bar_headers"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/yellowlight"
            android:padding="3dp">

            <TextView
                android:id="@+id/matl_received_viewstockhistory_dialog"
                style="@style/Description_Row_Textview"
                android:layout_alignParentLeft="true"

                android:gravity="left"
                android:text="Received"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/matl_used_viewstockhistory_dialog"
                style="@style/Description_Row_Textview"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Used"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/matl_indent_viewstockhistory_dialog"
                style="@style/Description_Row_Textview"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Indent"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listview_viewstockhistory_dialog"
            style="@style/Listview"
            android:layout_height="250dp"
            android:divider="@color/yellow"
            android:dividerHeight="1dip"></ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="3dp">

        <TextView
            android:id="@+id/sum_received_viewstockhistory_dialog"
            style="@style/Total_Sum_Amount_Textview"
            android:layout_alignParentLeft="true"
            android:gravity="left"

            android:text="0.00"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/sum_used_viewstockhistory_dialog"
            style="@style/Total_Sum_Amount_Textview"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0.00"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/sum_indent_viewstockhistory_dialog"
            style="@style/Total_Sum_Amount_Textview"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="0.00"
            android:textStyle="normal" />
    </RelativeLayout>

    <Button
        android:id="@+id/close_btn_viewstockhistory_dialog"
        style="@style/Buttons_Down"
        android:layout_height="35dp"
        android:text="@string/close" />
</LinearLayout>
