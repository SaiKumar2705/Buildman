<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_title_status_status_description"
            style="@style/CustomAction_Bar_Textview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/status" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:background="@color/gray_bar_material">

                    <TextView
                        android:id="@+id/task_name_header_status_status_description"
                        style="@style/ArrowedChanged_Textview"
                        android:layout_centerInParent="true"
                        android:text="South Wall Painting" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/startdate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:text="@string/start_date"
                            android:textColor="@color/darkgray_text"

                            />


                        <TextView
                            android:id="@+id/enddate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="@string/end_date"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/est_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/est"
                            android:textColor="@color/darkgray_text"

                            />

                        <TextView
                            android:id="@+id/est_startdate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:text="10-15-2015"
                            android:textColor="@color/darkgray_text" />


                        <TextView
                            android:id="@+id/est_enddate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="10-15-2015"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/actual_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/actual"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/actual_startdate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:clickable="true"
                            android:onClick="click"
                            android:text="@string/select"
                            android:textColor="@color/darkgray_text" />


                        <TextView
                            android:id="@+id/actual_enddate_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/calen"
                            android:gravity="center|end"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/total_qty_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/total_qty"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/total_qty_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:text="10.00"
                            android:textColor="@color/darkgray_text" />


                        <TextView
                            android:id="@+id/total_qty_units_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="kgs"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/completed_qty_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/completed_qty"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/completed_qty_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:text="10.00"
                            android:textColor="@color/darkgray_text" />


                        <TextView
                            android:id="@+id/completed_qty_units_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="kgs"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/current_qty_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/current_qty"
                            android:textColor="@color/darkgray_text" />
                        <!-- Dummy item to prevent EditText from receiving focus -->
                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />


                        <!-- Editext for Search -->

                        <EditText
                            android:id="@+id/current_qty_edt_status_status_description"
                            style="@style/Edittext_Style"
                            android:layout_alignBaseline="@+id/current_qty_title_txv_status_status_description"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="120dp"
                            android:layout_toRightOf="@+id/current_qty_title_txv_status_status_description"
                            android:background="@drawable/edittext"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:nextFocusLeft="@id/current_qty_edt_status_status_description"
                            android:nextFocusUp="@id/current_qty_edt_status_status_description"
                            android:text="0.00"
                            android:textColor="@color/darkgray_text"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/current_qty_units_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="kgs"
                            android:textColor="@color/darkgray_text" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <Button
                            android:id="@+id/update_stock_btn_status_status_description"
                            style="@style/UpdateButton"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/update_status" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/gray">

                        <TextView
                            android:id="@+id/total_completed_qty_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/totalcompleted_qty"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/total_completed_qty_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="120dp"
                            android:text="10.00"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/totalcompleted_qty_units_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="kgs"
                            android:textColor="@color/darkgray_text" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/transaction_datetime_title_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="@string/transaction_date"
                            android:textColor="@color/darkgray_text" />

                        <TextView
                            android:id="@+id/transaction_datetime_txv_status_status_description"
                            style="@style/Description_Row_Textview"
                            android:layout_alignBaseline="@+id/transaction_datetime_title_txv_status_status_description"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@+id/transaction_datetime_calender_img_status_status_description"
                            android:gravity="right"

                            android:padding="10dp"
                            android:text="8-10-2015 22:55:00"
                            android:textColor="@color/darkgray_text" />


                        <ImageView
                            android:id="@+id/transaction_datetime_calender_img_status_status_description"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/calender_date_tme" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"

        android:layout_weight="5">

        <ImageView
            android:id="@+id/back_img_status_status_description"
            style="@style/BackImageview"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"

            />

        <Button
            android:id="@+id/confirm_btn_status_status_description"
            style="@style/Confirm_Button"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
