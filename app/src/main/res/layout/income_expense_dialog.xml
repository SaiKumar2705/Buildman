<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/account_name_txv_income_exp_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Account_Name"
            android:textSize="@dimen/bar_headers"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/datebtn_income_exp_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/calendar_expense"
            android:gravity="center" />

        <TextView
            android:id="@+id/date_txv_income_exp_dialog"
            style="@style/Description_Row_Textview"
            android:layout_alignBaseline="@+id/datebtn_income_exp_dialog"
            android:layout_alignBottom="@+id/datebtn_income_exp_dialog"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="30-06-2015"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/recvd_amt_fm_portal_title_txv_income_exp_dialog"
            style="@style/Description_Row_Textview"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/revd_amt_from_portal"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recvd_amt_fm_portal_txv_income_exp_dialog"
            style="@style/Description_Row_Textview"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="0.00"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn_income_exp_dialog"
            style="@style/Buttons_Down"
            android:layout_height="35dp"
            android:layout_weight="1"

            android:text="@string/cancel" />


        <Button
            android:id="@+id/approve_btn_income_exp_dialog"
            style="@style/Buttons_Down"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="@string/approve" />


        <Button
            android:id="@+id/add_new_btn_income_exp_dialog"
            style="@style/Buttons_Down"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/add_new" />
    </LinearLayout>
</LinearLayout>
