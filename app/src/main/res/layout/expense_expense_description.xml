<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/yellowlight"
        android:orientation="horizontal" 
      >
         <TextView
            android:id="@+id/expense_title_exp_expense_descp"
           
            android:layout_centerVertical="true"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="10dp"        	
            android:text="@string/expenses" 
           style="@style/CustomAction_Bar_Textview"/>
         
       
    </RelativeLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:orientation="vertical">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"      
       >
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical">
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
     
        android:background="@color/bluelight" >
     <ImageView 
         android:id="@+id/prev_exp_expense_descp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/previous_arrow"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="12dp"/>
         <ImageView 
         android:id="@+id/next_exp_expense_descp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/next_arrow"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"/>

         <Button
             android:id="@+id/present_category_exp_expense_descp"
            
             android:layout_alignParentTop="true"
             android:layout_marginLeft="1dp"
             android:layout_toRightOf="@+id/prev_exp_expense_descp"
             android:background="@color/bluelight"
             android:text="@string/manpower"
            style="@style/ArrowedChanged_Textview" />
<TextView
    android:id="@+id/colon"
   
    android:layout_centerInParent="true"
    android:text=":" 
    style="@style/ArrowedChanged_Textview" />

<TextView
    android:id="@+id/sub_category_txv_exp_expense_descp"
  
android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
   style="@style/ArrowedChanged_Textview" 
    android:layout_toRightOf="@+id/colon"
    android:text="@string/mahesh" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"       
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/white">
<RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/white">
                  <Button 
                      android:id="@+id/datebtn_exp_expense_descp"
                     android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center"                     
                     android:background="@drawable/ic_launcher"/>

                  <TextView
                      android:id="@+id/time_txv_exp_expense_descp"
                     style="@style/Description_Row_Textview"
                      android:layout_alignBaseline="@+id/datebtn_exp_expense_descp"
                      android:layout_alignBottom="@+id/datebtn_exp_expense_descp"
                      android:layout_toLeftOf="@+id/datebtn_exp_expense_descp"
                      android:text="22.11"
                      android:onClick="click"
                      android:clickable="true"
                      android:layout_marginRight="5dp"
                      android:layout_centerVertical="true" />

                  <TextView
                      android:id="@+id/date_result_txv_exp_expense_descp"
                       style="@style/Description_Row_Textview"
                      
                     android:layout_centerInParent="true"
                      android:text="30-06-2015" />

                  <TextView
                      android:id="@+id/date_title_txv_exp_expense_descp"
                      style="@style/Description_Row_Textview"
                      android:layout_marginLeft="5dp"
                      android:layout_alignBaseline="@+id/datebtn_exp_expense_descp"
                      android:layout_alignBottom="@+id/datebtn_exp_expense_descp"
                      android:layout_alignParentLeft="true"
                      android:text="@string/date" />
                  
              </RelativeLayout>
              <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/gray">
                  <TextView 
                      android:id="@+id/amount_title_txv_exp_expense_descp"
                       style="@style/Description_Row_Textview"
                      android:layout_alignParentLeft="true"
                         android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:text="@string/amount"/>
                  <Button 
                      android:id="@+id/atm_calculatorbtn_exp_expense_descp"
                     android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center"                     
                      android:background="@drawable/ic_launcher"/>

                  <EditText
                      android:id="@+id/amount_edt_exp_expense_descp"
                      android:layout_width="140dp"
                      android:layout_height="wrap_content"
                     style="@style/Edittext_Style"
                      android:inputType="number"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/atm_calculatorbtn_exp_expense_descp" />
                  
              </RelativeLayout>
              <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/white">
                  <TextView 
                      android:id="@+id/payee_txv_exp_expense_descp"
                      style="@style/Description_Row_Textview"
                      android:layout_alignParentLeft="true"
                         android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:text="@string/payer"/>
                  <Button 
                      android:id="@+id/payeebtn_exp_expense_descp"
                     android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center"                     
                      android:background="@drawable/ic_launcher"/>

                  <EditText
                      android:id="@+id/payee_edt_exp_expense_descp"
                      android:layout_width="140dp"
                       style="@style/Edittext_Style"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/payeebtn_exp_expense_descp" />
                  
              </RelativeLayout>
              
              <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/gray">
                  <Button 
                      android:id="@+id/paymethodbtn_exp_expense_descp"
                  android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center"                     
                     android:background="@drawable/ic_launcher"/>

                 

                  <TextView
                      android:id="@+id/paymethod_result_txv_exp_expense_descp"
                      style="@style/Description_Row_Textview"
                      android:layout_alignBaseline="@+id/paymethod_title_txv_exp_expense_descp"
                      android:layout_alignBottom="@+id/paymethod_title_txv_exp_expense_descp"
                     android:layout_centerInParent="true"
                      android:text="@string/cash" />

                  <TextView
                      android:id="@+id/paymethod_title_txv_exp_expense_descp"
                     style="@style/Description_Row_Textview"
                      android:layout_marginLeft="5dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:text="@string/pay_method" />
                  
              </RelativeLayout>
              <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/white">
                 
                  <Button 
                      android:id="@+id/check_statusbtn_exp_expense_descp"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                       android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center" 
                              
                      android:background="@drawable/ic_launcher"/>

                  <EditText
                      android:id="@+id/check_edt_exp_expense_descp"
                      
                      android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/status_txv_exp_expense_descp"
                      android:layout_marginRight="3dp"
                      android:hint="@string/ref_cheque_no"
                      android:inputType="number"
                    style="@style/Edittext_Style"/>

                  <TextView
                      android:id="@+id/status_txv_exp_expense_descp"
                      style="@style/Description_Row_Textview"
                      android:layout_alignBaseline="@+id/check_edt_exp_expense_descp"
                      android:layout_alignBottom="@+id/check_edt_exp_expense_descp"
                      android:layout_toLeftOf="@+id/check_statusbtn_exp_expense_descp"
                      android:text="@string/status"
                      android:layout_marginRight="3dp"
                      />
                  
              </RelativeLayout>
               <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/gray">
                 
                  <ImageView 
                      android:id="@+id/descriptionImg_exp_expense_descp"
                     android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center" 
                                   
                     android:background="@drawable/ic_launcher"/>

                  <EditText
                      android:id="@+id/description_edt_exp_expense_descp"
                    style="@style/Edittext_Style"
                      android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                     
                      android:layout_toLeftOf="@+id/descriptionImg_exp_expense_descp"
                      android:hint="@string/description" />
                  
              </RelativeLayout>
               <RelativeLayout 
                  android:layout_height="50dp"
                  android:layout_width="match_parent"
                  android:padding="1dp"
                  android:background="@color/white">
                 
                  <Button 
                      android:id="@+id/taxbtn_exp_expense_descp"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                 android:layout_marginRight="4dp"
                         android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center" 
                              
                     android:background="@drawable/ic_launcher"/>

                  <EditText
                      android:id="@+id/tax_edt_exp_expense_descp"
                    style="@style/Edittext_Style"
                      android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/taxbtn_exp_expense_descp"
                     
                      android:hint="@string/tax"
                      android:inputType="numberDecimal" />
                  
              </RelativeLayout>
               
       </LinearLayout>
      
        </LinearLayout>
    </ScrollView>
     </LinearLayout>
 <LinearLayout
                  android:layout_height="match_parent"
                  android:layout_width="match_parent"                
                 android:layout_weight="5"
                  android:layout_gravity="bottom">
                 
                  <ImageView
         android:id="@+id/back_exp_expense_descp"
         style="@style/BackImageview"
         android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
       
        />

    <Button
        android:id="@+id/confirm_exp_expense_descp"
           style="@style/Confirm_Button"
        android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="10dp"
      android:layout_weight="1"
        />
                  
              </LinearLayout>
</LinearLayout>
